<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_view_bottom_sheet_description_header"
        style="@style/TextSheetBottom.Primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:text="Two Clusters and a Comet" />

    <TextView
        android:id="@+id/text_view_bottom_sheet_description_text"
        style="@style/TextSheetBottom.Secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bottom_sheet_description_header"
        tools:text="This lovely starfield spans some four full moons." />


</androidx.constraintlayout.widget.ConstraintLayout>